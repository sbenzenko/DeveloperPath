@inherits LayoutComponentBase
@inject IStringLocalizer<LanguageResources> localizer

 
<MudLayout>
    <MudAppBar Elevation="4" Color="Color.Primary">
        <MudIcon Size="Size.Large" ViewBox="0 0 500 500" />
        <MudHidden Breakpoint="Breakpoint.Xs">
            <MudText Typo="Typo.h6" Class="ml-4">
                <div class="drawer-logo">
                    <a href="/" style="text-decoration: none">DEVELOPER PATH</a>
                </div>
            </MudText>
        </MudHidden>
        <MudToolBar DisableGutters="true">
            <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" Class="ml-3" />
        </MudToolBar>
        <MudAppBarSpacer />
        <CultureSelector></CultureSelector>
        <LoginDisplay></LoginDisplay>
    </MudAppBar>
    <MudDrawer @bind-Open="DrawerOpened" Elevation="25" ClipMode="DrawerClipMode.Always">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code
{
    bool DrawerOpened = false;


    void DrawerToggle()
    {
        DrawerOpened = !DrawerOpened;
        StateHasChanged();
    }
}