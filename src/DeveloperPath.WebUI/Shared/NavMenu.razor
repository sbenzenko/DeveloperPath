@using DeveloperPath.WebUI.Resources
@using DeveloperPath.WebUI.Constants

@inject IStringLocalizer<LanguageResources> localizer

<MudNavMenu>
    <MudListSubheader Style="font-size: 0.8em" 
                      Class="mt-2 mb-n2">@localizer["Menu"].Value.ToUpper()</MudListSubheader>
    <MudNavLink Href="/" 
                Match="NavLinkMatch.All" 
                Icon="@Icons.Material.Filled.Home">
        <MudText Typo="Typo.button">@localizer["Home"].Value.ToUpper()</MudText>
    </MudNavLink>
    <MudNavLink Href="/paths" 
                Icon="@Icons.Material.Filled.School">
        <MudText Typo="Typo.button">@localizer["Paths"].Value.ToUpper()</MudText>
    </MudNavLink>
    <AuthorizeView Roles="@RolesConstants.ADMINISTRATOR">
        <Authorized>
            <MudListSubheader Style="font-size: 0.8em"
                              Class="mt-2 mb-n2">@localizer["Administrator zone"].Value.ToUpper()</MudListSubheader>
            <MudNavLink Href="/administration/paths" 
                        Icon="@Icons.Material.Filled.MergeType">
                <MudText Typo="Typo.button">@localizer["Paths"].Value.ToUpper()</MudText>
            </MudNavLink>
            <MudNavLink Href="/administration/modules" 
                        Icon="@Icons.Material.Filled.MergeType">
                <MudText Typo="Typo.button">@localizer["Modules"].Value.ToUpper()</MudText>
            </MudNavLink>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>